 #include <SFML/Graphics.hpp>


int main()
{
    sf::RenderWindow window(sf::VideoMode(800, 800), "Hangman!");
    sf::RectangleShape line (sf::Vector2f(300.f,10.f));
    sf::RectangleShape line2 (sf::Vector2f(380.f,10.f));
    sf::RectangleShape line3 (sf::Vector2f(150.f,10.f));


    line.setFillColor(sf::Color::White);
    line.setPosition(50.f,490.f);
    line2.rotate(90.f);
    line2.setPosition(120.f,110.f);
    line3.setPosition(120.f,110.f);


    while (window.isOpen())
    {
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();
        }


        window.clear();
        window.draw(line);
        window.draw(line2);
        window.draw(line3);
        window.display();
    }


    return 0;
}
